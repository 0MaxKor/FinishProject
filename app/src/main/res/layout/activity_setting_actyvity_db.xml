<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActyvityDB"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#69ABDF"
        android:textSize="26dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Перед первым использованием заполните следующие поля:"
        android:textColor="#F3EBEB"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etcity_forset"
        android:hint="Ваш город:"
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColorHint="#26DAF1"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textColor="#26DAF1"
    android:text="Ваш язык:"
    android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="English"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/ch_en"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Русский"
            android:textSize="20dp"
            android:id="@+id/ch_ru"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Готово"
        android:layout_gravity="center"
        android:id="@+id/ready"
        android:backgroundTint="#30C857"/>

</LinearLayout>